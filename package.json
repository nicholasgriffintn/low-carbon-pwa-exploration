{
  "name": "low-carbon-pwa-exploration",
  "description": "A exploration into a low carbon PWA news site.",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/bbc/data-force-experimentation-hub.git",
    "directory": "apps/web-app"
  },
  "license": "UNLICENSED",
  "scripts": {
    "generateCertificates": "node scripts/generateCertificates.js",
    "dev": "ENVIRONMENT=development nodemon",
    "build:static": "sass --load-path . --style compressed --no-error-css --no-source-map --stop-on-error --quiet src/styles/:public/assets/css/",
    "build:server": "tsc --project tsconfig.server.json",
    "build": "yarn build:static && yarn build:server",
    "start": "node dist/server/index.js",
    "runtests": "NODE_ENV=test node ./scripts/jest.js",
    "test": "yarn run runtests",
    "posttest": "yarn run typecheck && yarn run lint && yarn run format:check",
    "clean": "rimraf --no-glob ./tsconfig.tsbuildinfo ./.eslintcache ./.next ./dist",
    "typecheck": "tsc --project ./tsconfig.json --noEmit",
    "format": "prettier --loglevel warn --write \"**/*.{ts,js,json,jsx,tsx,md,scss}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,jsx,tsx,md,scss}\"",
    "lint": "yarn eslint && yarn lint:sass",
    "lint:sass": "sass-lint -v -q",
    "eslint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "eslint:fix": "eslint . --fix --ext .ts,.tsx,.js,.jsx",
    "test:a11y": "bbc-a11y"
  },
  "dependencies": {
    "compression": "1.7.4",
    "dotenv": "16.0.2",
    "express": "4.18.1",
    "gel-grid": "5.1.0",
    "gel-sass-tools": "2.1.0",
    "gel-typography": "4.1.0",
    "morgan": "1.10.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@types/jest": "29.0.3",
    "@types/node": "18.7.13",
    "@types/react": "18.0.20",
    "@types/morgan": "1.9.3",
    "@typescript-eslint/eslint-plugin": "5.38.0",
    "@typescript-eslint/parser": "5.38.0",
    "eslint": "8.23.1",
    "eslint-config-iplayer-tsx": "4.0.0",
    "eslint-config-next": "12.3.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.5.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "27.0.4",
    "eslint-plugin-jest-formatting": "3.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-regexp": "1.9.0",
    "eslint-plugin-testing-library": "5.6.4",
    "isomorphic-fetch": "3.0.0",
    "jest": "29.0.3",
    "jest-canvas-mock": "2.4.0",
    "jest-environment-jsdom": "29.0.3",
    "jest-junit": "14.0.1",
    "jest-standard-reporter": "2.0.0",
    "prettier": "2.7.1",
    "jsdom": "20.0.0",
    "pem": "1.14.6",
    "sass": "1.54.9",
    "sass-lint": "1.13.1",
    "sass-mq": "6.0.0",
    "sinon": "14.0.0",
    "ts-node": "10.9.1",
    "typescript": "4.8.3",
    "nodemon": "2.0.20"
  }
}
